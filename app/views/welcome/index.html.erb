

<div id="banner">
  <div class="jumbotron container-fluid text-center">
    <h1 class="coffeebreak">
      CoffeeBreak
    </h1>
    <p>
      Get your fix.
    </p>

    <%= link_to 'SIGN UP', new_user_registration_path, class: "button-hover", data: { text: "SIGN UP" } %>  <!--changed text from sign-up to pre-register in two spots -->

  </div>
</div>
<div id="how-it-works-row" class="lander-row">
  <div class="container">
    <img src="" style="position:absolute;top:-230px;max-width:300px;right:0;" class="coffee-pushing-gif img-responsive hidden-xs">
    <div class="row">
      <h3 class="text-center">
        HOW IT WORKS
      </h3>
      <br>
      <br>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="circle circle-number text-center">
          1
        </div>
        <br>
        <%= image_tag('gear.png', class: "img-responsive how-it-works-phone")  %>
        <br>
        <p class="text-center">
          Sign up and create an order profile.
        </p>
      </div>
      <div class="col-md-4">
        <div class="circle circle-number text-center">2
        </div>
        <br>
        <%= image_tag('logo-coffee.png', class: "img-responsive how-it-works-phone")  %>
        <br>
        <p class="text-center">
          Push our magical coffee button!
        </p>
      </div>
      <div class="col-md-4">
        <div class="circle circle-number text-center">
          3
        </div>
        <br>
        <%= image_tag('logistics.png', class: "img-responsive how-it-works-phone")  %>
        <br>
        <p class="text-center">
          Your coffee shows up at your office, home, or event. You can even include tip!
        </p>
      </div>
    </div>

<div>
  <!-- ADDED FLASH NOTIFICATION FOR PREREGISTRATION -->
<% if user_signed_in? %>
  <div id="tempflash">
    <%= flash[:notice] = "Succesfully registered. You will be notified via email when the app is live. Thanks for your support! - The Re-Up Team" %>
  </div>
<% end %>
</div>

