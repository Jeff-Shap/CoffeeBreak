<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div align="center">
    <div class="container">
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">Order Profiles
        <span class="caret"></span></button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
          <% @order_profiles.each do |o| %>
          <li class="profile_options">
            <%= o['name'] %>
          </li>
          <li style="visibility:hidden"><%= o['id'] %>
          <% end %>
        </ul>
      </div>
    </div>
    <p id="notice"><%= notice %></p>
  </div>
  </div>
  <%= f.input :order_profile_id, :input_html => {:id => "selected_profile_id", :value => "", :style => "visibility:hidden"} %>
  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>
